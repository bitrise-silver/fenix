---
format_version: '11'
default_step_lib_source: https://github.com/bitrise-io/bitrise-steplib.git
project_type: android

pipelines:
  benchmark:
    stages:
    - benchmark: {}

stages:
  benchmark:
    workflows:
    {{ range $j, $v := (ds "values").variations -}}
    {{- range $j, $java := $v.java_version -}}
    {{- range $k, $machine := $v.machine_types -}}
    {{- range $l, $stack := $v.stacks -}}
    {{- $name := (print "java-" $java "-" $machine "-" $stack) -}}
    - {{$name}}: {}
    {{ end -}}
    {{ end -}}
    {{ end -}}
    {{ end }}
workflows:
  _build:
    steps:
    - activate-ssh-key@4: {}
    - git-clone@6:
        inputs:
        - update_submodules: 'no'
    - install-missing-android-tools@3:
        inputs:
        - gradlew_path: "$PROJECT_LOCATION/gradlew"
    - android-lint@0:
        inputs:
        - variant: debug
    - gradle-runner@2:
        inputs:
        - gradle_task: detekt ktlint
        - gradle_file: ''
        - gradlew_path: "$BITRISE_SOURCE_DIR/gradlew"
    - change-android-versioncode-and-versionname@1: {}
    - android-build@1:
        inputs:
        - project_location: "$PROJECT_LOCATION"
        - module: "$MODULE"
        - build_type: aab
        - variant: release
  _openjdk64-11:
    steps:
    - script@1:
        inputs:
        - content: |-
            #!/usr/bin/env bash
            # fail if any commands fails
            set -e
            # make pipelines' return status equal the last command to exit with a non-zero status, or zero if all commands exit successfully
            set -o pipefail
            # debug log
            set -x

            jenv global openjdk64-11.0.11
            export JAVA_HOME="$(jenv prefix)"
            envman add --key JAVA_HOME --value "$(jenv prefix)"
  _temurin64-17:
    steps:
    - script@1:
        inputs:
        - content: |-
            #!/usr/bin/env bash
            # fail if any commands fails
            set -e
            # make pipelines' return status equal the last command to exit with a non-zero status, or zero if all commands exit successfully
            set -o pipefail
            # debug log
            set -x

            jenv global temurin64-17.0.4
            export JAVA_HOME="$(jenv prefix)"
            envman add --key JAVA_HOME --value "$(jenv prefix)"
  _temurin64-17-minor:
    steps:
    - script@1:
        inputs:
        - content: |-
            #!/usr/bin/env bash
            # fail if any commands fails
            set -e
            # make pipelines' return status equal the last command to exit with a non-zero status, or zero if all commands exit successfully
            set -o pipefail
            # debug log
            set -x

            jenv global temurin64-17.0.4.1
            export JAVA_HOME="$(jenv prefix)"
            envman add --key JAVA_HOME --value "$(jenv prefix)"
  _java-11:
    steps:
    - set-java-version@1:
        inputs:
        - set_java_version: '11'
  _java-17:
    steps:
    - set-java-version@1:
        inputs:
        - set_java_version: '17'
  linux-java-11:
    before_run:
    - _java-11
    after_run:
    - _build
    meta:
      bitrise.io:
        stack: linux-docker-android-20.04
        machine_type_id: elite-xl
  {{ range $j, $v := (ds "values").variations -}}
  {{- range $j, $java := $v.java_version -}}
  {{- range $k, $machine := $v.machine_types -}}
  {{- range $l, $stack := $v.stacks -}}
  {{- $name := (print "java-" $java "-" $machine "-" $stack) -}}
  {{$name}}:
    before_run:
    - _java-{{$java}}
    after_run:
    - _build
    meta:
      bitrise.io:
        stack: {{$stack}}
        machine_type_id: {{$machine}}
  {{ end -}}
  {{ end -}}
  {{ end -}}
  {{ end }}
meta:
  bitrise.io:
    stack: linux-docker-android-20.04
    machine_type_id: elite-xl
app:
  envs:
  - opts:
      is_expand: false
    PROJECT_LOCATION: "."
  - opts:
      is_expand: false
    MODULE: app
  - opts:
      is_expand: false
    VARIANT: Debug